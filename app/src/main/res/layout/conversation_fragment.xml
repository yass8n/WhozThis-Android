<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="100"
    android:background="@color/white"
    android:layout_height="60dp">
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="start|center"
        android:id="@+id/users_modal"
        >
        <com.makeramen.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@color/lighter_gray"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:riv_oval="true"
            app:riv_corner_radius="30dip"
            android:scaleType="fitCenter"
            />
        <com.makeramen.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/modal_pic"
            android:src="@drawable/single_icon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:riv_oval="true"
            app:riv_corner_radius="30dip"
            android:scaleType="fitCenter"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_and_date"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/title"
                android:text="title"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:text="date"
                android:textSize="12sp"
                android:gravity="end"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/title_and_date"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/last_message"
                android:text="last message"
                android:lines="1"
                android:textSize="14sp"
                android:layout_marginRight="20dp"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/delete"
                android:background="@drawable/trash"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <com.makeramen.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:visibility="invisible"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:id="@+id/bubble"
            android:src="@color/light_orange"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            app:riv_oval="true"
            app:riv_corner_radius="30dip"
            android:scaleType="fitCenter"
            />
    </RelativeLayout>

</LinearLayout>